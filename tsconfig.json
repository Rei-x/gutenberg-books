{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "@testing-library/jest-dom",
      "jest"
    ],
    "baseUrl": "src", // This must be specified if "paths" is.
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "isolatedModules": true,
    "strict": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "next-env.d.ts",
    "global.d.ts",
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}